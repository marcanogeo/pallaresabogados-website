<div
        class="mx-auto block max-w-md rounded-lg bg-transparent p-2 dark:bg-surface-dark">

    <div class="mx-auto p-6">
        <img class="rounded-2xl max-w-screen-xs min-h-screen-lg" src="/images/contactus.jpg" alt="contactus" />
    </div>
    <!--action="https://formsubmit.co/georgelysmarcanob@gmail.com"-->
    <form id="form" action="https://formsubmit.co/georgelysmarcanob@gmail.com" method="POST">
        <!--Name input-->
        <div class="relative block mb-6">
            <label>
                <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-bgreen">
                    Nombre:
                </span>
                <input
                        type="text"
                        name="full_name"
                        class="mt-1 px-3 py-2 border rounded-3xl shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full sm:text-sm focus:ring-1 required:border-red-500"
                        placeholder="Nombre y Apellido"
                        pattern="[A-Za-z0-9]{5,40}"
                        maxlength="100"
                        required
                />
            </label>
            <span></span>
        </div>
        <!--Email input-->
        <div class="relative block mb-6">
            <label>
                <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-bgreen">
                    Correo Electrónico:
                </span>
                <input
                        type="email"
                        name="email"
                        class="mt-1 px-3 py-2 border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-3xl sm:text-sm focus:ring-1 required:border-red-500"
                        placeholder="email@example.com"
                        required />
                        <!--minlength="8"-->
                        <!--pattern="[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*@[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*[.][a-zA-Z]{2,5}"-->
                <!--/>-->
            </label>
            <span></span>
        </div>
        <!--Subject input-->
        <div class="relative block mb-6">
            <label>
                <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-bgreen">
                    Asunto:
                </span>
                <input
                        type="text"
                        name="subject"
                        class="mt-1 px-3 py-2 border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-3xl sm:text-sm focus:ring-1 required:border-red-500"
                        placeholder="Asunto"
                        required />
                <!--        pattern="[a..zA..Z]"-->
                <!--        maxlength="40"-->
                <!--/>-->
            </label>
            <span></span>
        </div>
        <!--Message textarea-->
        <div class="relative mb-6">
            <label for="message" class="after:content-['*'] block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                ¿Díganos en qué podemos asesorarle?
            </label>
            <textarea
                    id="message"
                    name="message"
                    rows="4"
                    class="block p-2.5 w-full text-sm text-gray-900 rounded-lg border border-slate-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 required:border-red-500"
                    placeholder="Mensaje"
                    required
            ></textarea>
            <span></span>
                    <!--maxlength="255"-->
        </div>
        <!--Submit button-->
        <button
                type="submit"
                id="submit"
                class="inline-block w-full rounded-2xl bg-bgreen px-6 pb-2 pt-2.5 text-xs font-medium uppercase leading-normal text-light-gold shadow-green-3 transition duration-150 ease-in-out hover:bg-green-accent-300 hover:shadow-green-2 focus:bg-green-accent-300 focus:shadow-green-2 focus:outline-none focus:ring-0 active:bg-green-600 active:shadow-green-2 dark:shadow-black/30 dark:hover:shadow-dark-strong dark:focus:shadow-dark-strong dark:active:shadow-dark-strong"
        >
            Enviar
        </button>
    </form>
</div>

<script src="/src/validateform.js">

</script>